{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "esnext"
  },
  "include": [
    "/src/**/*.ts",
    "**/src/**/*.ts",
    "/src/**/*.d.ts",
    "**/*.tsx",
    "/src/styles/fonts",
    "src/custom.d.ts",
    "**/*.svg",
  ]
}